<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_tablo">

    <include
        android:id="@+id/fouls1"
        layout="@layout/include_fouls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.qwert2603.btablo.utils.TimeoutsView
        android:id="@+id/timeouts1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="6dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_hold" />

        <com.qwert2603.btablo.utils.HoldView
            android:id="@+id/holdView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:padding="6dp" />

    </LinearLayout>

    <com.qwert2603.btablo.utils.TimeoutsView
        android:id="@+id/timeouts2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="6dp" />

    <include
        android:id="@+id/fouls2"
        layout="@layout/include_fouls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>